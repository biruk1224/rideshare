<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        tools:context=".Fi4st">

        <View
            android:id="@+id/view2"
            android:layout_width="150.0dip"
            android:layout_height="2.0dip"
            android:layout_marginStart="32.0dip"
            android:background="@color/input"
            app:layout_constraintBottom_toBottomOf="@id/textView5"
            app:layout_constraintStart_toEndOf="@id/textView5"
            app:layout_constraintTop_toTopOf="@id/textView5"
            app:layout_constraintVertical_bias="0.52" />

        <ImageButton
            android:id="@+id/CREATE"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_marginTop="16.0dip"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingRight="@dimen/_25sdp"
            android:paddingBottom="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/create1"
            />

        <ImageButton
            android:id="@+id/JOIN"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingRight="@dimen/_25sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@id/joina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:srcCompat="@drawable/join1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createa"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/create_new_group"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:visibility="visible"
            app:cornerRadius="@dimen/_100sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CREATE" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/joina"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/join_existing_group"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/_100sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:fontFamily="@font/amiko"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="20.0dip"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createa" />

        <View
            android:id="@+id/view"
            android:layout_width="150.0dip"
            android:layout_height="2.0dip"
            android:layout_marginEnd="32.0dip"
            android:background="@color/input"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@id/textView5"
            app:layout_constraintTop_toTopOf="@id/textView5"
            app:layout_constraintVertical_bias="0.52" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>